@{
    ViewData["Title"] = "Rejestracja";
}


<div class="container-fluid d-flex justify-content-center align-content-center mt-5">
    <div style="max-width: 18rem" class="col">
        <form method="post">
            <div class="mb-3 row">
                <label class="form-label">Imie:</label>
                <input type="text" name="name" required class="form-control"/>
            </div>

            <div class="mb3 row">
                <label class="form-label">Nazwisko:</label>
                <input type="text" name="surname" required class="form-control"/>
            </div>

            <div class="mb-3 row">
                <label class="form-label">Login:</label>
                <input type="text" name="login" required class="form-control"/>
            </div>

            <div class="mb-3 row">
                <label class="form-label">Hasło:</label>
                <input type="text" name="password" required class="form-control"/>
            </div>


            <button type="submit" class="btn btn-primary w-100">Zarejestruj się</button>

            <a href="@Url.Action("Login", "Auth")" class="d-block text-center mt-2">Masz już konto? Zaloguj się</a>
        </form>
    </div>
</div>