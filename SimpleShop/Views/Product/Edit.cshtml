@model Products

<div class="d-flex justify-content-center align-content-center">
    <div style="width: 300px">
        <form method="post" asp-area="" asp-action="Edit" asp-controller="Product">
            <input type="hidden" name="_method" value="PUT"/>


            <div class="row mb-3 mt-3">
                <p class="form-label">Id:</p>
                <input type="text" class="form-control" name="Id" value="@Model.Id" readonly>
            </div>

            <div class="row mb-3">
                <p class="form-label">Nazwa:</p>
                <input type="text" class="form-control" name="Name" value="@Model.Name">
            </div>


            <div class="row mb-3">
                <p class="form-label">Cena:</p>
                <input type="text" class="form-control" name="Price" value="@Model.Price">
            </div>


            <div class="row mb-3">
                <p class="form-label">Producent:</p>
                <select name="ProducerId" class="form-select">
                    @foreach (var producer in ViewBag.Producers)
                    {
                        <option value="@producer.Id" selected="@(producer.Id == Model.ProducerId ? "selected" : null)">
                            @producer.Name
                        </option>
                    }
                </select>
            </div>

            
            <button type="submit" class="btn btn-primary w-100">Zapisz zmiany</button>
        </form>
    </div>
</div>