@{
}

<div class="d-flex justify-content-center align-content-center">
    <div style="width: 300px">
        <form method="post" asp-area="" asp-action="Add" asp-controller="User">

            <div class="row mb-3">
                <p class="form-label">Imie:</p>
                <input type="text" class="form-control" name="Name">
            </div>


            <div class="row mb-3">
                <p class="form-label">Naziwsko:</p>
                <input type="text" class="form-control" name="Surname">
            </div>


            <div class="row mb-3">
                <p class="form-label">Rola:</p>
                <select name="Role" class="form-select">
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
            </div>

            <div class="row mb-3">
                <p class="form-label">Login:</p>
                <input type="text" class="form-control" name="Login">
            </div>


            <div class="row mb-3">
                <p class="form-label">Hasło:</p>
                <input type="password" class="form-control" name="Password">
            </div>


            <button type="submit" class="btn btn-primary w-100">Dodaj</button>
        </form>
    </div>
</div>