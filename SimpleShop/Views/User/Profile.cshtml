@model Users


<div class="d-flex justify-content-center align-content-center">
    <div style="width: 400px" class="d-flex mt-4">
        <i class="fa-solid fa-user fa-9x"></i>
        
        <div style="width: 100%">
            <div class="p-2 d-flex justify-content-evenly align-content-center">
                <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Edit">Opcje</a>
                <a class="btn btn-info">Historia</a>
                <a class="btn btn-danger">Koszyk</a>
            </div>

            <div class="p-3">
                <div class="d-flex justify-content-between">
                    <p>Imie:</p>
                    <p>@Model.Name</p>
                </div>
                <div class="d-flex justify-content-between">
                    <p>Nazwisko:</p>
                    <p>@Model.Surname</p>
                </div>
            </div>
        </div>
        
    </div>
</div>
