@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<form method="post">
    <label>Login</label>
    <input type="text" name="login" required />

    <label>Hasło</label>
    <input type="password" name="password" required />

    <button type="submit">Zaloguj</button>
</form>

<a href="@Url.Action("Register", "Auth")">Nie masz konta? Zarejestruj się</a>